{
  "name": "@trinkets/core",
  "version": "0.4.0",
  "description": "A lightweight event-sourced issue tracker with append-only storage, dependency graphs, and production-grade resilience features",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/srdjans/trinkets"
  },
  "author": "Srdjan Strbanovic",
  "keywords": [
    "issue-tracker",
    "event-sourcing",
    "dependency-graph",
    "project-management",
    "append-only",
    "light-fp",
    "result-type",
    "deno"
  ],
  "imports": {
    "@std/fs": "jsr:@std/fs@1",
    "@std/path": "jsr:@std/path@1",
    "valibot": "npm:valibot@0.31.0"
  },
  "tasks": {
    "test": "deno test -A --unstable-kv",
    "test:unit": "deno test -A tests/domain_test.ts tests/result_test.ts",
    "test:integration": "deno test -A --unstable-kv tests/integration_test.ts",
    "test:e2e": "deno test -A --unstable-kv tests/e2e_test.ts",
    "test:concurrency": "deno test -A tests/concurrency_test.ts",
    "test:production": "deno test -A --unstable-kv tests/production_test.ts tests/performance_test.ts",
    "test:all": "deno test -A --unstable-kv tests",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "publish": "jsr publish",
    "demo": "deno run -A examples/basic_embed.ts",
    "tr": "deno run -A cli/tr.ts",
    "init-merge": "deno run -A cli/init_merge.ts"
  },
  "exports": {
    ".": "./src/index.ts",
    "./domain": "./src/domain.ts",
    "./query": "./src/query.ts",
    "./search": "./src/search.ts",
    "./embed": "./src/embed.ts",
    "./ports": "./src/ports.ts",
    "./result": "./src/result.ts",
    "./stores/jsonl": "./src/store_jsonl.ts",
    "./stores/heads": "./src/store_jsonl_heads_v2.ts",
    "./cache/kv": "./src/cache_kv.ts",
    "./cache/sqlite": "./src/cache_sqlite.ts",
    "./indexed": "./src/indexed_graph.ts",
    "./query/indexed": "./src/query_indexed.ts",
    "./observability": "./src/observability.ts",
    "./retry": "./src/retry.ts",
    "./integrity": "./src/integrity.ts",
    "./backup": "./src/backup.ts",
    "./schemas": "./src/schemas_runtime.ts"
  },
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "lib": ["ES2022", "deno.ns", "deno.window", "deno.unstable"]
  },
  "publish": {
    "exclude": [
      "cli/",
      "examples/",
      "**/*_test.ts"
    ]
  }
}
